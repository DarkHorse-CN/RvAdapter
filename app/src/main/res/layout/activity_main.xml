<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.darkhorse.rvadapterdemo.MainActivity">

    <Button
        android:id="@+id/btn_sample_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="单一布局"
        app:layout_constraintBottom_toTopOf="@+id/btn_sample_2"
        app:layout_constraintEnd_toEndOf="@+id/btn_sample_2"
        app:layout_constraintStart_toStartOf="@+id/btn_sample_2" />

    <Button
        android:id="@+id/btn_sample_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="多元布局"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sample_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="网格布局"
        app:layout_constraintEnd_toEndOf="@+id/btn_sample_2"
        app:layout_constraintStart_toStartOf="@+id/btn_sample_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_sample_2" />
</android.support.constraint.ConstraintLayout>
